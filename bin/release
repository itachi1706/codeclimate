#!/bin/sh
#
# Release a new version of this repository.
#
# Assumes bin/prep-release was run and the PR merged.
#
# Usage: bin/release
#
###
set -e

git checkout master
git pull

version=$(< VERSION)

printf "RELEASE %s\n" "$version"
rake release

docker build --rm -t itachi1706/codeclimate .
docker push itachi1706/codeclimate:latest
docker tag itachi1706/codeclimate "itachi1706/codeclimate:$version"
docker push "itachi1706/codeclimate:$version"

(cd ../homebrew-formulae/ && bin/release "$version")
(cd ../marketingsite/ && bin/set-cli-version "$version" && bin/deploy) || {
  cat >&2 <<EOF
--------------------------------------------------------------------------------
- WARNING: Marketing site update failed. Please do this manually.              -
--------------------------------------------------------------------------------
EOF
}

echo "Be sure to update release notes:"
echo ""
echo "  https://github.com/itachi1706/codeclimate/releases/new?tag=v$version"
echo ""
